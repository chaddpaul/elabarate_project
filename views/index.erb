<h1 id="homehead">Welcome to ela-Bar-ate</h1>
<ul class="home">
  <% @bars.each_with_index do |bar,id| %>
  <li>
    <p><a href="/home/b/<%= bar["name"]%>"><strong><%= bar["name"]%></strong></a></p>
    <p><img src="<%=bar["picture"] %>"></p>
    <p><%= bar["text"] %></p>
    <p><%=bar["location"] %></p>
    <p><a href="/home/r/<%= bar["region"] %>"><%= bar["region"] %></a></p>
    <p><%=bar["author"] %></p>
  </li>
  <% end %>
</ul>

<a href="/home/new">Add A Bar</a>


